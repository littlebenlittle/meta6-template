#!env raku

use META6::Query;
use Stache::Renderer;
use FileSystem::Helpers;

my $root-dir = META6::Query::root-dir $?FILE;
my $tmpl-dir = $root-dir.add('resources').add('templates');

my %args = %(
    module-name => 'META6::Template',
    description => 'generate meta6-compliant project stubs',
    module-name-urlsafe => 'meta6-template',
    author-github => 'littlebenlittle',
    author-name   => 'Ben Little',
    author-email  => 'ben.little@benlittle.dev',
    tags     => '"meta6", "modules"',
    provides => '"META6::Template": "lib/META6/Template.rakumod"',
);

generate-dir($tmpl-dir, $root-dir, |%args);

